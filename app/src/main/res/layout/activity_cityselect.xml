<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewfinder_mask"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="20dip" >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginTopPercent="20%h"
        android:background="@color/white"
        app:layout_marginRightPercent="20%w"
        app:layout_marginLeftPercent="20%w"
        app:layout_marginBottomPercent="20%h"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLogin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="请选择省市区"
                android:padding="@dimen/widget_margin"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/city_selecty_shutdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/widget_margin"
                android:textColor="@android:color/white"
                android:text="关闭"
                android:textSize="20sp"
                android:background="@drawable/login_btn_selector"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="40%h"
            app:layout_marginTopPercent="10%h"
            android:orientation="horizontal">

            <com.remote.glasses.utils.citySelect.kankan.wheel.widget.WheelView
                android:id="@+id/id_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_weight="1" >
            </com.remote.glasses.utils.citySelect.kankan.wheel.widget.WheelView>

            <com.remote.glasses.utils.citySelect.kankan.wheel.widget.WheelView
                android:id="@+id/id_city"
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.remote.glasses.utils.citySelect.kankan.wheel.widget.WheelView>

            <com.remote.glasses.utils.citySelect.kankan.wheel.widget.WheelView
                android:id="@+id/id_district"
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.remote.glasses.utils.citySelect.kankan.wheel.widget.WheelView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            app:layout_marginTopPercent="10%h"
            app:layout_marginRightPercent="20%w"
            app:layout_marginLeftPercent="20%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white" />

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>