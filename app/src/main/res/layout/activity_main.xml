<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activity.MainActivity">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%h"
        app:layout_widthPercent="50%w"
        app:layout_marginLeftPercent="25%w"
        android:background="@color/gray"
        android:gravity="center_vertical"
        app:layout_marginRightPercent="25%w"
        android:orientation="horizontal"
        app:layout_marginTopPercent="6%h">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="75%h"
            app:layout_widthPercent="75%h"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:background="@drawable/icon_department" />

        <TextView
            android:id="@+id/main_nameinfo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="80%h"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:text="暂无信息,请"
            app:layout_textSizePercent="50%"
            android:layout_marginRight="@dimen/widget_margin"
            android:drawablePadding="@dimen/widget_margin"/>

        <TextView
            android:id="@+id/main_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="80%h"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:text="登录"
            android:textColor="@color/colorLogin"
            app:layout_textSizePercent="40%"
            android:layout_marginRight="@dimen/widget_margin"
            android:drawablePadding="@dimen/widget_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/widget_margin"
            app:layout_textSizePercent="30%"
            android:text="客服电话:4008101001"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10.7%w"
        app:layout_widthPercent="50%w"
        app:layout_marginLeftPercent="25%w"
        app:layout_marginRightPercent="25%w"
        android:gravity="center_horizontal|bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/widget_margin"
            android:layout_height="match_parent"
            android:background="@drawable/logo_happy"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%w"
        app:layout_heightPercent="8%w"
        app:layout_marginLeftPercent="25%w"
        app:layout_marginRightPercent="25%w"
        android:background="@color/result_view">


        <com.panxw.android.imageindicator.ImageIndicatorView
            android:id="@+id/indicate_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"/>



    </com.zhy.android.percent.support.PercentRelativeLayout>



    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="25%h"
        app:layout_widthPercent="50%w"
        android:background="@drawable/border_gray"
        app:layout_marginLeftPercent="25%w"
        app:layout_marginRightPercent="25%w"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_create_from"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="99%h"
            app:layout_widthPercent="33%w"
            app:layout_paddingPercent="20%h"
            android:drawablePadding="2dp"
            app:layout_textSizePercent="15%"
            android:gravity="center"
            android:background="@drawable/white_gray_selector"
            android:drawableTop="@drawable/icon_found"
            android:textColor="@color/colorLogin"
            android:text="创建订单"/>

        <View
            android:layout_width="@dimen/line_defaut"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/main_manage_from"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="99%h"
            app:layout_widthPercent="33.5%w"
            app:layout_paddingPercent="20%h"
            android:drawablePadding="2dp"
            android:gravity="center"
            app:layout_textSizePercent="15%"
            android:background="@drawable/white_gray_selector"
            android:drawableTop="@drawable/icon_manage"
            android:textColor="@color/colorLogin"
            android:text="订单管理"/>

        <View
            android:layout_width="@dimen/line_defaut"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/main_autoask"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="99%h"
            app:layout_widthPercent="33%w"
            app:layout_paddingPercent="20%h"
            android:drawablePadding="2dp"
            android:gravity="center"
            app:layout_textSizePercent="15%"
            android:background="@drawable/white_gray_selector"
            android:drawableTop="@drawable/noopsyche"
            android:textColor="@color/colorLogin"
            android:text="智能问答"/>


    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="25%h"
        app:layout_widthPercent="16.6%w"
        android:background="@drawable/border_gray"
        app:layout_marginLeftPercent="25%w"
        app:layout_marginRightPercent="25%w"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/main_setting"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="99%h"
            app:layout_widthPercent="100%w"
            app:layout_paddingPercent="20%h"
            android:drawablePadding="2dp"
            android:gravity="center"
            app:layout_textSizePercent="15%"
            android:background="@drawable/white_gray_selector"
            android:drawableTop="@drawable/icon_system"
            android:textColor="@color/colorLogin"
            android:text="系统设置"/>
        <View
            android:layout_width="@dimen/line_defaut"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
