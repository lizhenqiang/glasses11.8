<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="78%h"

        >
        <ImageView
            android:id="@+id/machine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="50%h"
            app:layout_widthPercent="50%h"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/machine"/>
        <!--<ImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--app:layout_heightPercent="20%h"-->
            <!--app:layout_widthPercent="38%w"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@drawable/logo_happy"/>-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="38%w"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/robot"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="9%h"
            app:layout_widthPercent="35%w"
            android:id="@+id/ask_ll1"
            android:layout_below="@+id/machine"
            >
            <RadioGroup
                android:id="@+id/ask_rg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/ask"
                    style="@style/AskRb1"
                    android:text="问诊"
                    android:checked="true"
                    />
                <!--<RadioButton-->
                    <!--android:id="@+id/mesure"-->
                    <!--style="@style/AskRb1"-->
                    <!--android:text="测量"-->
                    <!--/>-->
                <RadioButton
                    android:id="@+id/diagnose"
                    style="@style/AskRb1"
                    android:text="诊断"
                    />
                <RadioButton
                    android:id="@+id/prescription"
                    style="@style/AskRb1"
                    android:text="处方"
                    />
            </RadioGroup>
        </com.zhy.android.percent.support.PercentLinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="42%h"
            app:layout_widthPercent="62%w"
            android:id="@+id/ask_ll2"
            android:layout_below="@+id/ask_ll1"
            >
            <RadioGroup
                android:id="@+id/ask_rg2"
                android:layout_width="0dp"
                app:layout_widthPercent="72%w"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/question1"
                    style="@style/AskRb2"
                    android:text=" "
                    android:checked="true"
                    android:padding="@dimen/widget_margin"/>
                <RadioButton
                    android:id="@+id/question2"
                    style="@style/AskRb2"
                    android:text=" "
                    android:padding="@dimen/widget_margin"/>
                <RadioButton
                    android:id="@+id/question3"
                    style="@style/AskRb2"
                    android:text=" "
                    android:padding="@dimen/widget_margin"/>
                <RadioButton
                    android:id="@+id/question4"
                    style="@style/AskRb2"
                    android:text=" "
                    android:padding="@dimen/widget_margin"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/ask_rg3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/selection1"
                    style="@style/AskRb3"
                    android:text=" "
                    android:padding="@dimen/widget_margin"/>
                <RadioButton
                    android:id="@+id/selection2"
                    style="@style/AskRb3"
                    android:text=" "
                    android:padding="@dimen/widget_margin"/>
                <RadioButton
                    android:id="@+id/selection3"
                    style="@style/AskRb3"
                    android:text=" "
                    android:padding="@dimen/widget_margin"/>
                <RadioButton
                    android:id="@+id/selection4"
                    style="@style/AskRb3"
                    android:text=" "
                    android:visibility="invisible"
                    android:padding="@dimen/widget_margin"/>
            </RadioGroup>
            </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="16%h"
        app:layout_marginLeftPercent="1%w"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/ask_replay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="70%h"
            app:layout_widthPercent="20%w"
            android:padding="5dp"
            android:text="重播"
            app:layout_textSizePercent="22%"
            android:textColor="@drawable/askreplay_textselector"
            android:background="@drawable/askreplay_selector"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/ask_tips"
            android:layout_height="0dp"
            app:layout_heightPercent="80%h"
            android:layout_width="0dp"
            app:layout_widthPercent="40%w"
            app:layout_marginLeftPercent="20%w"
            android:background="@color/colorLogin"
            android:textColor="@color/white"
            android:padding="8dp"
            android:text="提示内容"
            app:layout_textSizePercent="24%"
            android:layout_centerInParent="true"
            android:gravity="center"
            />

        <!--<Button-->
            <!--android:id="@+id/ask_ensure"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:padding="5dp"-->
            <!--android:text="确认"-->
            <!--android:textColor="@drawable/askbtn_textselector"-->
            <!--android:background="@drawable/askbtn_selector1"-->
            <!--android:layout_gravity="center"-->
            <!--/>-->
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>
