<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_marginLeftPercent="20%w"
        app:layout_widthPercent="60%w"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLogin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="光轴度"
                android:textColor="@color/white"
                app:layout_heightPercent="8%"
                app:layout_textSizePercent="3.5%"
                />

            <TextView
                android:id="@+id/guangzhou_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_btn_selector"
                android:gravity="center_vertical"
                android:text="清空"
                android:textColor="@color/white"
                app:layout_heightPercent="8%"
                app:layout_textSizePercent="3.5%"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.remote.glasses.utils.CycleRulerView
            android:id="@+id/guangzhou_cycleruler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_widthPercent="90%"
            app:layout_heightPercent="50%"
            android:padding="1dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayDeep"
            />
        <LinearLayout
            android:id="@+id/dialog_guangzhou_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="8%h"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/guangzhou_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_seletor"
                android:text="确定"
                android:textColor="@android:color/black"
                app:layout_textSizePercent="40%"
                />

            <Button
                android:id="@+id/guangzhou_middle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@android:color/black"
                app:layout_textSizePercent="40%"
                android:visibility="gone"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grayDeep"/>

            <Button
                android:id="@+id/guangzhou_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_btn_seletor"
                android:text="取消"
                android:textColor="@android:color/black"
                app:layout_textSizePercent="40%"
                />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>