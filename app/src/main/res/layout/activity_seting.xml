<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/viewfinder_mask"
    tools:context="com.remote.glasses.activity.ManagerOrderActivity">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="60%h"
        app:layout_widthPercent="60%w"
        android:orientation="vertical"
        android:background="@drawable/solid_radiu">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="10%h"
            android:background="@drawable/login_btn_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="50%h"
                android:layout_centerInParent="true"
                android:text="系统设置"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/set_shut_down"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_textSizePercent="50%h"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="关闭"
                android:paddingRight="@dimen/widget_margin"
                android:paddingLeft="@dimen/widget_margin"
                android:background="@drawable/login_btn_normal"
                android:textColor="@android:color/white"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_heightPercent="20%h"
            app:layout_marginTopPercent="5%h"
            android:background="@android:color/white">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_defaut"
                android:background="@color/grayDeep"/>

            <TextView
                android:id="@+id/set_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="49%h"
                android:background="@drawable/white_gray_selector"
                android:text="保存"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_textSizePercent="25%h"
                android:textColor="@android:color/black"
                android:drawableRight="@drawable/icon_select"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_defaut"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/grayDeep"/>

            <TextView
                android:id="@+id/set_nosave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="49%h"
                android:background="@drawable/white_gray_selector"
                android:text="不保存"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_textSizePercent="25%h"
                android:textColor="@android:color/black"
                android:drawableRight="@drawable/icon_select"/>


        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_defaut"
            android:background="@color/grayDeep"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_defaut"
            app:layout_marginTopPercent="5%h"
            android:background="@color/grayDeep"/>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="10%h"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_weight="1"
                android:text="版本信息"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@android:color/black"
                app:layout_textSizePercent="50%h" />

            <TextView
                android:id="@+id/set_version_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center_vertical|right"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@android:color/black"
                app:layout_textSizePercent="50%h"/>

        </com.zhy.android.percent.support.PercentLinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_defaut"
            android:background="@color/grayDeep"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_defaut"
            app:layout_marginTopPercent="10%h"
            android:visibility="gone"
            android:background="@color/grayDeep"/>

        <TextView
            android:id="@+id/set_back_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_heightPercent="10%h"
            android:background="@drawable/white_gray_selector"
            android:text="退出登录"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            app:layout_textSizePercent="5%h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_defaut"

            android:background="@color/grayDeep"/>




    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>
